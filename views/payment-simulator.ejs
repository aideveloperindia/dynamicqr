<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - QR Multiplex Demo</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #f5f5f5;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }
        .payment-container {
            max-width: 400px;
            width: 100%;
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            overflow: hidden;
        }
        .payment-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 30px 20px;
            text-align: center;
        }
        .payment-header h1 {
            font-size: 24px;
            margin-bottom: 10px;
        }
        .payment-header .subtitle {
            font-size: 14px;
            opacity: 0.9;
        }
        .payment-body {
            padding: 30px 20px;
        }
        .merchant-info {
            text-align: center;
            padding: 20px 0;
            border-bottom: 1px solid #eee;
        }
        .merchant-name {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }
        .merchant-upi {
            font-size: 14px;
            color: #666;
            font-family: 'Courier New', monospace;
        }
        .amount-section {
            padding: 30px 0;
            text-align: center;
        }
        .amount-label {
            font-size: 14px;
            color: #666;
            margin-bottom: 10px;
        }
        .amount-input {
            font-size: 48px;
            font-weight: bold;
            color: #333;
            border: none;
            outline: none;
            text-align: center;
            width: 100%;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 10px;
        }
        .amount-input::placeholder {
            color: #ccc;
        }
        .quick-amounts {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
            margin-top: 20px;
        }
        .quick-amount-btn {
            padding: 12px;
            background: #f8f9fa;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-weight: 600;
            color: #667eea;
            cursor: pointer;
            transition: all 0.3s;
        }
        .quick-amount-btn:hover {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }
        .pay-button {
            width: 100%;
            padding: 18px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 18px;
            font-weight: 600;
            cursor: pointer;
            margin-top: 20px;
            transition: all 0.3s;
        }
        .pay-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }
        .pay-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        .demo-badge {
            background: #fff3cd;
            color: #856404;
            padding: 8px 15px;
            border-radius: 20px;
            font-size: 12px;
            display: inline-block;
            margin-top: 15px;
        }
        .success-screen {
            display: none;
            text-align: center;
            padding: 40px 20px;
        }
        .success-screen.active {
            display: block;
        }
        .success-icon {
            width: 80px;
            height: 80px;
            background: #28a745;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            font-size: 40px;
            color: white;
        }
        .success-title {
            font-size: 24px;
            font-weight: bold;
            color: #28a745;
            margin-bottom: 10px;
        }
        .success-amount {
            font-size: 36px;
            font-weight: bold;
            color: #333;
            margin: 20px 0;
        }
        .success-details {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
            text-align: left;
        }
        .success-detail-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }
        .success-detail-row:last-child {
            border-bottom: none;
        }
        .success-detail-label {
            color: #666;
            font-size: 14px;
        }
        .success-detail-value {
            color: #333;
            font-weight: 600;
            font-size: 14px;
        }
        .back-button {
            margin-top: 20px;
            padding: 12px 24px;
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
        }
        
        /* Mobile Responsive Styles */
        @media (max-width: 768px) {
            body {
                padding: 10px;
            }
            .payment-container {
                border-radius: 15px;
            }
            .payment-header {
                padding: 25px 15px;
            }
            .payment-header h1 {
                font-size: 22px;
            }
            .payment-body {
                padding: 25px 15px;
            }
            .merchant-name {
                font-size: 18px;
            }
            .merchant-upi {
                font-size: 13px;
                word-break: break-all;
            }
            .amount-input {
                font-size: 42px;
            }
            .quick-amounts {
                gap: 8px;
            }
            .quick-amount-btn {
                padding: 10px;
                font-size: 14px;
            }
            .pay-button {
                padding: 16px;
                font-size: 16px;
            }
            .success-screen {
                padding: 30px 15px;
            }
            .success-icon {
                width: 70px;
                height: 70px;
                font-size: 36px;
            }
            .success-title {
                font-size: 22px;
            }
            .success-amount {
                font-size: 32px;
            }
        }
        
        @media (max-width: 480px) {
            body {
                padding: 5px;
            }
            .payment-container {
                border-radius: 12px;
            }
            .payment-header {
                padding: 20px 12px;
            }
            .payment-header h1 {
                font-size: 20px;
            }
            .payment-header .subtitle {
                font-size: 12px;
            }
            .payment-body {
                padding: 20px 12px;
            }
            .merchant-name {
                font-size: 16px;
            }
            .merchant-upi {
                font-size: 12px;
            }
            .amount-label {
                font-size: 13px;
            }
            .amount-input {
                font-size: 36px;
                padding: 8px;
            }
            .quick-amounts {
                grid-template-columns: repeat(3, 1fr);
                gap: 6px;
            }
            .quick-amount-btn {
                padding: 8px;
                font-size: 13px;
            }
            .pay-button {
                padding: 14px;
                font-size: 15px;
            }
            .demo-badge {
                padding: 6px 12px;
                font-size: 11px;
            }
            .success-screen {
                padding: 25px 12px;
            }
            .success-icon {
                width: 60px;
                height: 60px;
                font-size: 30px;
            }
            .success-title {
                font-size: 20px;
            }
            .success-amount {
                font-size: 28px;
            }
            .success-details {
                padding: 15px;
            }
            .success-detail-row {
                font-size: 13px;
            }
            .back-button {
                padding: 10px 20px;
                font-size: 14px;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="payment-container">
        <div class="payment-header">
            <h1 id="appName">Payment</h1>
            <div class="subtitle">QR Multiplex Demo</div>
        </div>
        
        <div class="payment-body" id="paymentForm">
            <div class="merchant-info">
                <div class="merchant-name" id="merchantName"><%= merchant.name %></div>
                <div class="merchant-upi" id="merchantUPI"><%= merchant.upi_id %></div>
            </div>

            <div class="amount-section">
                <div class="amount-label">Enter Amount</div>
                <input 
                    type="number" 
                    class="amount-input" 
                    id="amountInput" 
                    placeholder="0"
                    min="1"
                    step="1"
                    autofocus
                >
                <div class="quick-amounts">
                    <button class="quick-amount-btn" onclick="setAmount(100)">â‚¹100</button>
                    <button class="quick-amount-btn" onclick="setAmount(500)">â‚¹500</button>
                    <button class="quick-amount-btn" onclick="setAmount(1000)">â‚¹1000</button>
                </div>
            </div>

            <button class="pay-button" id="payButton" onclick="processPayment()">
                Pay Now
            </button>

            <div style="text-align: center;">
                <div class="demo-badge">ðŸŽ­ DEMO MODE - No Real Payment</div>
            </div>
        </div>

        <div class="success-screen" id="successScreen">
            <div class="success-icon">âœ“</div>
            <div class="success-title">Payment Successful!</div>
            <div class="success-amount" id="successAmount">â‚¹0</div>
            
            <div class="success-details">
                <div class="success-detail-row">
                    <span class="success-detail-label">Paid to:</span>
                    <span class="success-detail-value" id="successMerchant"><%= merchant.name %></span>
                </div>
                <div class="success-detail-row">
                    <span class="success-detail-label">UPI ID:</span>
                    <span class="success-detail-value" id="successUPI"><%= merchant.upi_id %></span>
                </div>
                <div class="success-detail-row">
                    <span class="success-detail-label">Transaction ID:</span>
                    <span class="success-detail-value" id="transactionId"></span>
                </div>
                <div class="success-detail-row">
                    <span class="success-detail-label">Time:</span>
                    <span class="success-detail-value" id="transactionTime"></span>
                </div>
            </div>

            <button class="back-button" onclick="resetPayment()">Make Another Payment</button>
        </div>
    </div>

    <script>
        const merchantName = '<%= merchant.name %>';
        const merchantUPI = '<%= merchant.upi_id %>';
        const appType = '<%= appType || "gpay" %>';

        // Set app name based on type
        const appNames = {
            'gpay': 'Google Pay',
            'phonepe': 'PhonePe',
            'paytm': 'Paytm'
        };
        document.getElementById('appName').textContent = appNames[appType] || 'Payment';

        function setAmount(amount) {
            document.getElementById('amountInput').value = amount;
        }

        function generateTransactionId() {
            return 'DEMO' + Date.now().toString().slice(-10);
        }

        function processPayment() {
            const amount = parseFloat(document.getElementById('amountInput').value);
            
            if (!amount || amount <= 0) {
                alert('Please enter a valid amount');
                return;
            }

            // Disable button
            document.getElementById('payButton').disabled = true;
            document.getElementById('payButton').textContent = 'Processing...';

            // Simulate payment processing delay
            setTimeout(() => {
                // Hide payment form
                document.getElementById('paymentForm').style.display = 'none';
                
                // Show success screen
                const successScreen = document.getElementById('successScreen');
                successScreen.classList.add('active');
                
                // Update success details
                document.getElementById('successAmount').textContent = 'â‚¹' + amount.toLocaleString('en-IN');
                document.getElementById('successMerchant').textContent = merchantName;
                document.getElementById('successUPI').textContent = merchantUPI;
                document.getElementById('transactionId').textContent = generateTransactionId();
                document.getElementById('transactionTime').textContent = new Date().toLocaleString('en-IN');
            }, 1500);
        }

        function resetPayment() {
            document.getElementById('paymentForm').style.display = 'block';
            document.getElementById('successScreen').classList.remove('active');
            document.getElementById('amountInput').value = '';
            document.getElementById('payButton').disabled = false;
            document.getElementById('payButton').textContent = 'Pay Now';
            document.getElementById('amountInput').focus();
        }

        // Allow Enter key to submit
        document.getElementById('amountInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                processPayment();
            }
        });
    </script>
</body>
</html>

